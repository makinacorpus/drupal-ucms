<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {% import _self as xmlsitemap %}
  {% for tree in menus_tree %}
  {{ xmlsitemap.tree(tree) }}
  {% endfor %}
</urlset>

{% macro tree(tree) %}
  {% import _self as xmlsitemap %}
  {% for item in tree.children %}
    <url>
      <loc>{{ url(item.route, {'absolute': true}) }}</loc>
    </url>
    {{ xmlsitemap.tree(item) }}
  {% endfor %}
{% endmacro %}
