<div class="col-md-12">
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>{{ "Title"|trans }}</th>
        <th>{{ "Default status"|trans }}</th>
        <th>{{ "Created"|trans }}</th>
        <th>{{ "Changed"|trans }}</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {% for item in items %}
        <tr>
          <td>
            {{ item.title|escape }}
            {% if item.isMeta %}
              <span class="pull-right">
                <span class="glyphicon glyphicon-pushpin" data-toggle="tooltip" title="{{ "This is the default group"|trans }}"></span>&nbsp;
              </span>
            {% endif %}
          </td>
          <td>{% if item.isGhost %}{{ "invisible"|trans }}{% else %}{{ "visible"|trans }}{% endif %}</td>
          <td>{{ item.createdAt|time_diff }}</td>
          <td>{{ item.changedAt|time_diff }}</td>
          <td>
            {{ ucms_actions(item) }}
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="7">
            {% block empty %}{{ "There is no groups yet."|trans }}{% endblock %}
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>