<div class="col-md-12">
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>{{ "Type"|trans }}</th>
        <th>{{ "Hostname"|trans }}</th>
        <th>{{ "Title"|trans }}</th>
        <th>{{ "State"|trans }}</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {% for item in items %}
        <tr>
          <td>{{ item.site.type }}</td>
          <td>{{ item.site.hostname|escape }}</td>
          <td>{{ item.site.adminTitle|escape }}</td>
          <td>{{ item.site.state|ucms_site_state }}</td>
          <td>
            {{ ucms_actions(item) }}
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="5">
            {{ "There is no sites attached to this group yet."|trans }}
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>