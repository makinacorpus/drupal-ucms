        <thead>
            <th>{{ "Id."|t }}</th>
            <th>{{ "Name"|t }}</th>
            <th>{{ "Hostname"|t }}</th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </thead>
        <tbody>
            {% for item in items %}
                {{ block('item') }}
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
