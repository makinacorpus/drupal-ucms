{% extends '@calista/page/page.html.twig' %}

{%- block item -%}
    <tr>
        <td>{{ item.id }}</td>
        <td>{{ item.adminTitle }}</td>
        <td>{{ item.hostname }}</td>
        <td></td>
        <td></td>
        <td></td>
        <td>{{ ucms_actions(item) }}</td>
