{% extends '@ucms_dashboard/page/page-table.html.twig' %}

{%- block item -%}
    <tr>
        <td>{{ item.displayName }}</td>
        <td>{{ item.email }}</td>
        <td>{{ ucms_site_role(item.role) }}</td>
        <td>{% if item.isActive %}{{ "Active"|t }}{% else %}{{ "Disabled"|t }}{% endif %}</td>
        <td>{{ ucms_actions(item) }}</td>
    </tr>
{%- endblock -%}

{% block item_list %}
    <table>
        <thead>
            {% with {label: "Name"|t, field: 'u.name'} %}
                {{ block('table_header') }}
            {% endwith %}
            {% with {label: "Email"|t, field: 'u.mail'} %}
                {{ block('table_header') }}
            {% endwith %}
            {% with {label: "Role"|t, field: 'sa.role'} %}
                {{ block('table_header') }}
            {% endwith %}
            <th>{{ "Global status"|t }}</th>
            <th></th>
        </thead>
        <tbody>
            {% for item in items %}
                {{ block('item') }}
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
