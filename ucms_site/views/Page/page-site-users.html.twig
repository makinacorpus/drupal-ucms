{% extends '@calista/page/page.html.twig' %}

{% block item %}
  <tr>
    <td>{{ item.getDisplayName }}</td>
    <td>{{ item.getEmail }}</td>
    <td>{{ item.role|ucms_site_role }}</td>
    <td>{% if item.isBlocked %}{{ "Disabled"|trans }}{% else %}{{ "Enabled"|trans }}{% endif %}</td>
    <td>
      {{ calista_actions(item) }}
    </td>
  </tr>
{% endblock %}

{% block item_list %}
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>{{ "Name"|trans }}</th>
        <th>{{ "Email"|trans }}</th>
        <th>{{ "Role"|trans }}</th>
        <th>
          {{ "Global status"|trans }}
          <span
            title="{{ "This is the global status for across the whole platform. Is a user is disabled, he/she won't be able to log in."|trans }}"
            class="fa fa-question-circle">
          </span>
        </th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {% for item in items %}
        {{ block('item') }}
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
