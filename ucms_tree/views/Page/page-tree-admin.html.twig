{% extends '@calista/page/page.html.twig' %}

{% block item %}
  <tr>
    <td>{{ item.id }}</td>
    <td>{{ item.name }}</td>
    <td>{{ item.title }}</td>
    <td>{{ item.description }}</td>
    <td>{{ item.role }}</td>
    <td>{% if menu.isSiteMain() %}{{ "Yes" }}{% endif %}</td>{# Not working #}
    <td>
      {{ calista_actions(item) }}
    </td>
  </tr>
{% endblock %}

{% block item_list %}
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>{{ "Id."|trans }}</th>
        <th>{{ "Internal name"|trans }}</th>
        <th>{{ "Title"|trans }}</th>
        <th>{{ "Description"|trans }}</th>
        <th>{{ "Role"|trans }}</th>
        <th>{{ "Site main"|trans }}</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {% for item in items %}
        {{ block('item') }}
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
