{% extends '@calista/page/page.html.twig' %}

{% block item %}
  <tr>
    <td>{{ item.path }}</td>
    <td>{{ item.nodeTitle }}</td>
    <td>
      {{ calista_actions(item) }}
    </td>
  </tr>
{% endblock %}

{% block item_list %}
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>{{ "Old path"|trans }}</th>
        <th>{{ "Content"|trans }}</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {% for item in items %}
        {{ block('item') }}
      {% else %}
        <tr>
          <td colspan="3">
            {{ "This site contains not SEO redirect."|trans }}
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}

