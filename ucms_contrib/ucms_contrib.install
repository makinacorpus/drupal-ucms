      ],
      'uid' => [
        'description' => "Account owner",
        'type'        => 'int',
        'unsigned'    => true,
        'not null'    => true,
        'default'     => 0,
      ],
    ],
    'foreign keys' => [
      'uid' => [
        'table'   => 'users', 
        'columns' => ['uid' => 'uid'],
      ],
      'nid' => [
        'table'   => 'node', 
        'columns' => ['nid' => 'nid'],
      ],
    ],
    'primary key' => ['uid', 'nid'],
  ];

  $schema['ucms_node_reference'] = [
    'description' => 'Internal table that tracks node references',
    'fields' => [
