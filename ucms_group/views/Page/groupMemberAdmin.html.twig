{% extends '@calista/page/page.html.twig' %}

{% block item %}
<tr>
  <td>{{ item.displayName }}</td>
  <td>{{ item.email|escape }}</td>
  <td>{% if item.isActive %}{{ "enabled"|trans }}{% else %}{{ "disabled"|trans }}{% endif %}</td>
  <td>
    {{ calista_actions(item) }}
  </td>
</tr>
{% endblock %}

{% block item_list %}
<div class="col-md-12">
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>{{ "Name"|trans }}</th>
        <th>{{ "Email"|trans }}</th>
        <th>
          {{ "Global status"|trans }}
          <span title="{{ "This is the global status for across the whole platform. Is a user is disabled, he/she won't be able to log in."|trans }}" class="fa fa-question-circle"></span>
        </th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {% for item in items %}
        {{ block('item') }}
      {% else %}
        <tr>
          <td colspan="7">
            {% block empty %}{{ "There is no members yet."|trans }}{% endblock %}
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}