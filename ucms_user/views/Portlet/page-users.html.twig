{% extends '@calista/page/page.html.twig' %}

{% block item %}
  <tr>
    <td>{{ item.displayName }}</td>
    <td>{{ item.createdTime|time_diff }}</td>
    <td>@todo</td>
    <td>{% if item.isActive %}{{ "Enabled"|t }}{% else %}{{ "Disabled"|t }}{% endif %}</td>
    <td>{{ calista_button({icon: 'eye-open', title: "View"|t, uri: path('admin/dashboard/user/' ~ item.id)}) }}</td>
  </tr>
{% endblock %}

{% block item_list %}
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>{{ "Name"|trans }}</th>
        <th>{{ "Creation"|trans }}</th>
        <th>{{ "Roles"|trans }}</th>
        <th>{{ "Status"|trans }}</th>
        <th>{{ "Link"|trans }}</th>
      </tr>
    </thead>
    <tbody>
      {% for item in items %}
        {{ block('item') }}
      {% else %}
        <tr>
          <td colspan="6">
            {{ "There is no dead links."|trans }}
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}

